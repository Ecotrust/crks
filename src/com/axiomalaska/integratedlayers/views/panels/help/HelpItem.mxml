<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" includeInLayout="{Boolean(value)}" visible="{Boolean(value)}">
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var label:String;
			
			[Bindable]
			public var value:String;
			
			[Bindable]
			public var color:uint = 0x333333;
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label text="{label + ' :'}" fontWeight="bold" fontSize="13" visible="{Boolean(label)}" includeInLayout="{Boolean(label)}" color="{color}" />
	<s:Label text="{value}" width="100%" color="{color}" />
</s:HGroup>
